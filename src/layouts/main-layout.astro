---
const { title } = Astro.props;
const pageTitle = title || "SchnitzStück - Individuelle Holzmöbel aus München";
const description = "Ihre Vision, unser Handwerk. Bei SchnitzStück in München überschreiten wir die Grenzen traditioneller Schreinerkunst, um durch unvergleichlich freie Formgestaltung Ihre Vorstellungen in exklusive, handgeschnitzte Realität zu verwandeln.";
const preloadImage = '/Sessel.jpg'; // Pfad zu Ihrem Hauptbild
import Nav from "../components/Nav"
import Footer from "../components/footer.astro"
import Jump from "../components/jump2"
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <link rel="icon" type="image/png" href="./public/SchnitzStück Logo schwarz.png">
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <!-- Preloading des Hauptbildes für verbessertes LCP -->
    <link rel="preload" as="image" href={preloadImage}>
    <!-- Weitere Scripts und Stylesheets, falls benötigt -->
  </head>
  <body>
    <Jump client:only="react" />
    <!-- <Nav client:load/> -->
    <main>
      <!-- Deine Navigationsleiste und weitere Inhalte -->
      <slot />
    </main>
    <Footer />
  </body>
</html>
