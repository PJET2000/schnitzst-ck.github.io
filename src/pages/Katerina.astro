---
import BaseLayout from "../layouts/base-layout.astro"
---

<BaseLayout title="Katerina">
    <html>


    <div id="card" class="">
        <div class="model-viewer-container mt-96 shadow-lg overflow-hidden rounded-xl border-4 border-base-content">
        <!-- All you need to put beautiful, interactive 3D content on your site: -->
        <model-viewer  class="h-full "
        src="/Katerina-3-small2.glb"
                                      
                    ar ar-modes="scene-viewer webxr quick-look" camera-controls tone-mapping="neutral"
                      alt="A 3D model of an astronaut"
                      shadow-intensity="1"
                      auto-rotate>
                      <!-- <div class="progress-bar h-96" slot="progress-bar">
                        <div class="update-bar"></div>
                    </div> -->
                    
                    
        </model-viewer>

        <button slot="ar-button"  id="ar-button" >
            View in your space
        </button>
        
        
      
        <div class="p-4 bg-base-content">
        <h2 class="text-2xl text-base-100 font-bold">Modell 3</h2>
        <p class="text-lg text-base-100">Beistelltisch aus Nussbaum und maseriertem Ahorn mit Intarsienarbeit in der Tischplatte</p>
      </div>
     
    </div>
    </div>
    
      

      </html>

</BaseLayout>

