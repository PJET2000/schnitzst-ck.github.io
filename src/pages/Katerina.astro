---
import BaseLayout from "../layouts/base-layout.astro"
---

<BaseLayout title="Katerina">
    <html>

    <div id="card" class="">
      <div class="model-viewer-container mt-72 shadow-lg overflow-hidden rounded-xl border-4 border-base-content">
          <model-viewer  class="h-full "
          src="/Katharina-1.glb"
          ios-src="/Katerina-3-small.usdz"
          
                                      
                      ar ar-modes="scene-viewer webxr quick-look" camera-controls tone-mapping="neutral"
                      alt="Katerina-1"
                      shadow-intensity="1"
                      auto-rotate>                  
          </model-viewer>
              
      <div class="p-4 bg-base-content">
      <h2 class="text-2xl text-base-100 font-bold">Modell 1</h2>
      <p class="text-lg text-base-100">Einfacher Beistelltisch aus Buchenschichtholz mit grauer Vinyl-Arbeitsplatte und orangefarbener Rückwand.</p>
    </div>
  </div>
  </div>


    


    <div id="card" class="">
        <div class="model-viewer-container mt-72 shadow-lg overflow-hidden rounded-xl border-4 border-base-content">
            <model-viewer  class="h-full "
            src="/Katharina-Intarsien.glb"
            ios-src="/Katerina-3-small.usdz"
            
                                        
                        ar ar-modes="scene-viewer webxr quick-look" camera-controls tone-mapping="neutral"
                        alt="Katerina-2"
                        shadow-intensity="1"
                        auto-rotate>                  
            </model-viewer>
                
        <div class="p-4 bg-base-content">
        <h2 class="text-2xl text-base-100 font-bold">Modell 2</h2>
        <p class="text-lg text-base-100">Beistelltisch aus Buchenvollholz mit Intarsienarbeit in der Tischplatte und grauer Rückwand </p>
      </div>
    </div>
    </div>
    
      

    <div id="card" class="">
      <div class="model-viewer-container mt-72 shadow-lg overflow-hidden rounded-xl border-4 border-base-content">
          <model-viewer  class="h-full "
          src="/Katerina-3-small2.glb"
          ios-src="/Katerina-3-small.usdz"
          
                                      
                      ar ar-modes="scene-viewer webxr quick-look" camera-controls tone-mapping="neutral"
                      alt="Katerina-3"
                      shadow-intensity="1"
                      auto-rotate>                  
          </model-viewer>
              
      <div class="p-4 bg-base-content">
      <h2 class="text-2xl text-base-100 font-bold">Modell 3</h2>
      <p class="text-lg text-base-100">Beistelltisch aus Nussbaum und maseriertem Ahorn mit Intarsienarbeit in der Tischplatte</p>
    </div>
  </div>
  </div>

      </html>

</BaseLayout>



<style>
    body {
    margin: 1em;
    padding: 0;
    height: 100%;
  }
  
  #card {
    margin: 3em auto;
    display: flex;
    flex-direction: column;
    max-width: 600px;
    
    overflow: hidden;
    width: 90%
  }
  
  model-viewer {
    width: 100%;
    height: 70vh;  

  }


  .model-viewer-container {
        position: relative;
    }
 
  model-viewer::part(default-progress-bar) {
    
    height: 10px;
    background-color: #FFF5ED;
    position: absolute;
    border-radius: 5px;
    display: block;
    border-radius: 25px;
    box-shadow: 0 3px 10px 3px rgba(0, 0, 0, .5), 0 0 5px 1px rgba(0, 0, 0, .6);
    /* border: 2px solid #41539b; */
    
    margin-top: 50%;
    margin-left: 25%;
    width: 50%;
      }




</style>