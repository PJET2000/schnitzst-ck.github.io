    body {
    margin: 1em;
    padding: 0;
    height: 100%;
  }
  
  #card {
    margin: 3em auto;
    display: flex;
    flex-direction: column;
    max-width: 600px;

    overflow: hidden;
  }
  
  model-viewer {
    width: 100%;
    height: 70vh;    
  }

</style>